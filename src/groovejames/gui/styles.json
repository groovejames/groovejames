/*
 * some named styles (like CSS)
 *
 * use it like that:
 *
 * <bxml:define>
 *   <bxml:include bxml:id="styles" src="styles.json"/>
 * </bxml:define>
 * <PushButton styles="$styles.commandButton" .../>
 */

{
    commandButton: {
        font: {bold:true},
        color: 4,
        backgroundColor: 16,
        borderColor: 13,
        disabledBackgroundColor: 10,
        disabledBorderColor: 7,
        padding: {top:3, left:4, bottom:3, right:4},
        minimumAspectRatio: 3
    }
}
